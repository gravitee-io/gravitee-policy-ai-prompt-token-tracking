{
    "id": "custom-token-and-pricing",
    "name": "custom-token-and-pricing",
    "apiVersion": "1.0",
    "definitionVersion": "4.0.0",
    "type": "proxy",
    "analytics": {},
    "description": "subscribe-assign-metrics",
    "listeners": [
        {
            "type": "http",
            "paths": [
                {
                    "path": "/custom-token-and-pricing"
                }
            ],
            "entrypoints": [
                {
                    "type": "http-proxy"
                }
            ]
        }
    ],
    "endpointGroups": [
        {
            "name": "default",
            "type": "http-proxy",
            "endpoints": [
                {
                    "name": "default",
                    "type": "http-proxy",
                    "weight": 1,
                    "inheritConfiguration": false,
                    "configuration": {
                        "target": "http://localhost:8080/custom"
                    }
                }
            ]
        }
    ],
    "flows": [
        {
            "name": "flow-1",
            "enabled": true,
            "selectors": [
                {
                    "type": "http",
                    "path": "/",
                    "pathOperator": "STARTS_WITH"
                }
            ],
            "request": [],
            "response": [
                {
                    "name": "AI Token Track",
                    "description": "",
                    "enabled": true,
                    "policy": "ai-prompt-token-tracking",
                    "configuration": {
                        "extraction": {
                            "type": "CUSTOM",
                            "inputTokenPointer": "/usage/custom_prompt_tokens",
                            "outputTokenPointer": "/usage/custom_completion_tokens",
                            "modelPointer": "/custom_model"
                        },
                        "pricing": {
                            "inputPriceValue": 0.4,
                            "inputPriceUnit": "1000000",
                            "outputPriceValue": 0.8,
                            "outputPriceUnit": "1000000"
                        }
                    }
                }
            ],
            "subscribe": [],
            "publish": []
        }
    ]
}
